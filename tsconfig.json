{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "types": ["@types/node", "@nuxt/types", "vue-apollo/types"]
    },
    "exclude": ["node_modules", ".nuxt", "dist"]
}
